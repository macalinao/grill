{
  "name": "@macalinao/grill-monorepo",
  "private": true,
  "type": "module",
  "license": "Apache-2.0",
  "author": "Ian Macalinao <me@ianm.com>",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "catalogs": {
      "peer": {
        "@solana/kit": "*",
        "react": "^18 || ^19",
        "react-dom": "^18 || ^19",
        "zod": "^4"
      }
    },
    "catalog": {
      "eslint": "=9.39.2",
      "typescript": "^5.9.3",
      "@macalinao/eslint-config": "^7.0.3",
      "@macalinao/eslint-config-react": "^6.0.3",
      "@macalinao/tsconfig": "^3.2.5",
      "@solana/kit": "^5.1.0",
      "tslib": "^2.8.1",
      "@tanstack/react-query": "^5.90.12",
      "@solana/wallet-adapter-base": "^0.9.27",
      "@solana/wallet-adapter-react": "^0.15.39",
      "@types/react": "^19.2.7",
      "@types/react-dom": "^19.2.3",
      "react": "^19.2.3",
      "react-dom": "^19.2.3",
      "gill": "^0.14.0",
      "@gillsdk/react": "^0.7.0",
      "@types/bun": "^1.3.5"
    }
  },
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo build --filter='./packages/**'",
    "build:watch": "turbo watch build",
    "build:watch:packages": "turbo watch build --filter='./packages/**'",
    "lint": "ast-grep scan && biome check && turbo run lint",
    "lint:fix": "ast-grep scan --update-all && biome check --write --no-errors-on-unmatched --unsafe && turbo run lint -- --fix",
    "lint:ci": "turbo run lint",
    "clean": "turbo run clean && rm -fr node_modules/",
    "test": "CI=true turbo run test",
    "watch": "turbo watch build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "ci:version": "changeset version && bun update",
    "ci:publish": "./scripts/ci-publish.sh",
    "prepare": "husky",
    "codegen": "turbo run codegen"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.29.8",
    "@macalinao/biome-config": "^0.1.7",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.6",
  "lint-staged": {
    "*.{json,jsonc,html}": "biome format --write --no-errors-on-unmatched"
  },
  "overrides": {
    "@types/react": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  }
}
