{
  "name": "@macalinao/grill-monorepo",
  "private": true,
  "type": "module",
  "license": "Apache-2.0",
  "author": "Ian Macalinao <me@ianm.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/macalinao/grill.git"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "catalog": {
      "eslint": "^9.29.0",
      "typescript": "^5.9.2",
      "@macalinao/eslint-config": "^4.2.0",
      "@macalinao/tsconfig": "^3.2.0",
      "@solana/kit": "^2.3.0",
      "tslib": "^2.8.1",
      "@coral-xyz/borsh": "^0.31.1",
      "@tanstack/react-query": "^5.84.0",
      "@solana/wallet-adapter-base": "^0.9.27",
      "@solana/wallet-adapter-react": "^0.15.39",
      "react": "^19.1.0",
      "react-dom": "^19.1.0",
      "gill": "^0.10.3",
      "gill-react": "^0.5.0"
    }
  },
  "scripts": {
    "build": "turbo build",
    "build:watch": "turbo watch build",
    "build:watch:packages": "turbo watch build --filter='./packages/*'",
    "lint": "biome check && turbo run lint",
    "lint:fix": "biome check --write --no-errors-on-unmatched --unsafe && turbo run lint -- --fix",
    "clean": "turbo run clean",
    "test": "CI=true turbo run test",
    "watch": "turbo watch build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "ci:version": "changeset version && bun update",
    "ci:publish": "for dir in packages/*; do (cd \"$dir\" && bun publish || true); done && changeset tag",
    "prepare": "husky",
    "codegen": "turbo run codegen"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@changesets/cli": "^2.29.5",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.2.19",
  "lint-staged": {
    "*.{json,jsonc,html}": "biome format --write --no-errors-on-unmatched"
  },
  "overrides": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
