{
  "name": "@macalinao/wallet-adapter-compat",
  "version": "0.2.3",
  "description": "Compatibility layer that bridges @solana/wallet-adapter with @solana/kit and grill",
  "type": "module",
  "author": "Ian Macalinao <me@ianm.com>",
  "homepage": "https://grill.ianm.com",
  "license": "Apache-2.0",
  "keywords": [
    "solana",
    "wallet",
    "adapter",
    "kit",
    "blockchain",
    "web3",
    "compatibility"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "src/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/macalinao/grill.git",
    "directory": "packages/wallet-adapter-compat"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -fr dist/",
    "lint": "eslint . --cache"
  },
  "dependencies": {
    "@macalinao/grill": "workspace:*",
    "@solana/webcrypto-ed25519-polyfill": "*",
    "tslib": "catalog:"
  },
  "devDependencies": {
    "@macalinao/eslint-config": "catalog:",
    "@macalinao/eslint-config-react": "^3.1.2",
    "@macalinao/tsconfig": "catalog:",
    "@solana/web3.js": "^1.98.4",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "eslint": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@solana/kit": "catalog:",
    "@solana/wallet-adapter-base": "catalog:",
    "@solana/wallet-adapter-react": "catalog:",
    "@tanstack/react-query": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": [
      "biome check --write --no-errors-on-unmatched",
      "eslint --fix --cache"
    ],
    "*.{json,jsonc,html}": "biome format --write --no-errors-on-unmatched"
  }
}
