{
  "name": "@macalinao/dataloader-es",
  "version": "0.2.8",
  "description": "Modern ESM-native TypeScript implementation of Facebook's DataLoader pattern for efficient batching and caching",
  "type": "module",
  "sideEffects": false,
  "author": "Ian Macalinao <me@ianm.com>",
  "homepage": "https://grill.ianm.com",
  "license": "MIT",
  "keywords": [
    "dataloader",
    "batching",
    "caching",
    "graphql",
    "esm",
    "typescript",
    "performance",
    "ian-macalinao"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "src/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/macalinao/grill.git",
    "directory": "packages/dataloader-es"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -fr dist/ node_modules/ tsconfig.tsbuildinfo .eslintcache",
    "lint": "eslint . --cache",
    "test": "bun test"
  },
  "devDependencies": {
    "@macalinao/eslint-config": "catalog:",
    "@macalinao/tsconfig": "catalog:",
    "@types/bun": "catalog:",
    "eslint": "catalog:",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": [
      "biome check --write --no-errors-on-unmatched",
      "eslint --fix --cache"
    ],
    "*.{json,jsonc,html}": "biome format --write --no-errors-on-unmatched"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
