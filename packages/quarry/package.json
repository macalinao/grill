  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "bun test || true"
  },
  "dependencies": {
    "@macalinao/clients-quarry": "^0.2.1",
