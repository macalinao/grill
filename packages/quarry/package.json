{
  "name": "@macalinao/quarry",
  "version": "0.0.1",
  "description": "Quarry utility functions for Solana development",
  "license": "Apache-2.0",
  "author": "Ian Macalinao <me@ianm.com>",
  "homepage": "https://grill.ianm.com",
  "keywords": [
    "solana",
    "quarry",
    "utilities",
    "defi",
    "staking",
    "mining",
    "rewards",
    "liquidity-mining",
    "yield-farming",
    "merge-mining",
    "rewarder",
    "miner",
    "blockchain",
    "web3",
    "anchor",
    "spl-token",
    "ian-macalinao",
    "macalinao",
    "grill"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
